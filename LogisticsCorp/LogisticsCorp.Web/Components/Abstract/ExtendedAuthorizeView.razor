@if (_isAnyRole)
{
    @ChildContent
}

@code {
    private bool _isAnyRole;

    [Inject] protected UserStateContainer UserStateContainer { get; set; } = default!;

    [Parameter] public string[] Roles { get; set; } = [];

    [Parameter] public RenderFragment? ChildContent { get; set; }

    protected override void OnInitialized()
    {
        var userRoles = UserStateContainer.Roles;

        _isAnyRole = userRoles.Any(x => Roles.Contains(x));
    }
}